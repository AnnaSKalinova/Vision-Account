@model AddRouteFormModel

@{
    ViewData["Title"] = "Add Route";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">Add Route</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Code"></label>
                    <input asp-for="Code" class="form-control" placeholder="A, B, C...">
                    <span asp-validation-for="Code" class=" small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Description here..">
                    <span asp-validation-for="Description" class=" small text-danger"></span>
                </div>
                <input class="btn btn-primary float-right" type="submit" value="Add" />
            </form>
        </div>
    </div>
</div>
