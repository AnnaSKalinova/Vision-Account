@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject IAccountantService Accountants

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var userId = User.GetId();
        var userIsAccountant = Accountants.UserIsAlreadyAccountant(userId);
        var userIsChiefAccountant = User.IsChefAccountant();

        @if (userIsAccountant && !userIsChiefAccountant)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="SalesInvoices" asp-action="Mine">My invoices</a>
            </li>
        }
        else if (!userIsChiefAccountant)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Accountants" asp-action="Become">Accountant</a>
            </li>
        }
        else if (userIsChiefAccountant)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Admin" asp-controller="SalesInvoices" asp-action="All">Administration</a>
            </li>
        }


        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
