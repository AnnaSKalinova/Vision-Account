@model AddCustomerFormModel
@using AccountingProgram.Data.Models.Enums

@{
    ViewBag.Title = "Add Customer";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">@ViewBag.Title</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Company ehf.">
                    <span asp-validation-for="Name" class=" small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChainName"></label>
                    <input asp-for="ChainName" class="form-control">
                    <span asp-validation-for="ChainName" class=" small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control">
                    <span asp-validation-for="Address" class=" small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactName"></label>
                    <input asp-for="ContactName" class="form-control" placeholder="Georgi Georgiev">
                    <span asp-validation-for="ContactName" class=" small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="name@example.com">
                    <span asp-validation-for="Email" class=" small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for=PaymentTerm></label>
                    <select class="form-control" asp-for="@Model.PaymentTerm" asp-items="Html.GetEnumSelectList<PaymentTerm>()">
                        <option selected>Choose payment term...</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="RouteId"></label>
                    <select asp-for="RouteId" class="form-control">
                        <option selected>Choose route...</option>
                        @foreach (var route in Model.Routes)
                        {
                            <option value="@route.Id">@route.Code</option>
                        }
                    </select>
                </div>
                <input class="btn btn-primary float-right" type="submit" value="Add" />
            </form>
        </div>
    </div>
</div>
