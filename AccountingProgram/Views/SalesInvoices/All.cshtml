@model SearchSalesInvoicesQueryModel

@{
    ViewData["Title"] = "All Sales Invoices";
}

<form method="get">
    <div class="row mb-5">
        <div class="form-group col-md-3">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Search by customer name...">
        </div>
        <div class="form-group col-md-3">
            <div class="form-group">
                <label asp-for="Chain"></label>
                <select asp-for="Chain" class="form-control">
                    <option value="">All</option>
                    @foreach (var chain in Model.Chains)
                    {
                        <option value="@chain">@chain</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group col-md-3">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Invoice number</option>
                    <option value="1">Customer name</option>
                    <option value="2">Posting date</option>
                    <option value="3">Total amount excl. VAT</option>
                </select>
            </div>
        </div>
    </div>
</form>

<div class="container">
    <div class="row">
        @foreach (var salesInvoice in Model.SalesInvoices)
        {
            <div class="card mr-3" style="width: 18rem;">
                <div class="card-body">
                    <h3 class="card-title">@salesInvoice.Id</h3>
                    <h5 class="card-title">Customer: @salesInvoice.Customer</h5>
                    <h5 class="card-title">Posting Date: @salesInvoice.PostingDate</h5>
                    <h5 class="card-title">Total Amount Excl. Vat: @salesInvoice.TotalAmountExclVat.ToString("0.00") lv.</h5>
                    <h5 class="card-title">Total Amount Incl. Vat: @salesInvoice.TotalAmountInclVat.ToString("0.00") lv.</h5>
                    <a asp-controller="SalesInvoices" asp-action="Details" asp-route-id="@salesInvoice.Id" class="card-link">More details</a>
                </div>
            </div>
        }
    </div>
</div>

@{ 
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalSalesInvoices / SearchSalesInvoicesQueryModel.SalesInvoicesPerPage);
}

<div class="row">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)" 
           asp-controller="SalesInvoices" 
           asp-action="All" 
           asp-route-currentPage="@previousPage"
           asp-route-chain="@Model.Chain"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">Previous</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-right @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)" 
           asp-controller="SalesInvoices" 
           asp-action="All" 
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-chain="@Model.Chain"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">Next</a>
    </div>
</div>

